{% load custom_filters %}

<div class="object-gallery {{ contenttype }}-gallery">
{% for image in gallery_images %}
        <a class="gallery" href="{{ image.image|thumbnail }}" title="{{ image.name }}" rel="group_gallery">
        {% if show_thumbs %}
            <img class="gallery-thumb" src="{{ image.image|thumbnail:"60x45" }}" />
        {% else %}
            {% if image.name %}
                {{ image.name }}
            {% else %}
                {{ image.image }}
            {% endif %}
            <br />
        {% endif %}
        </a>
{% endfor %}
</div>